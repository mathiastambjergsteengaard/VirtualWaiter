<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mathias.virtualwaiter.OrderConfirmationActivity"
    android:background="@mipmap/menu">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:id="@+id/sv"
        android:background="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonVisMenu" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menuBack"
        android:id="@+id/buttonVisMenu"
        android:backgroundTint="#0000A0"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/Buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_order"
        android:id="@+id/buttonBestil"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:textColor="#ffffff"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="59dp"
        android:layout_marginRight="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ToPay"
        android:id="@+id/textView"
        android:padding="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textColor="#0000A0"
            android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonBestil"
        android:layout_alignEnd="@+id/buttonBestil"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />


</RelativeLayout>
