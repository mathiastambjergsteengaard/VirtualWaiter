<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/menu"
    tools:context="com.example.mathias.virtualwaiter.Menu2OverviewActivity">

    <Button
        style="@style/listViewsXL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_menu"
        android:id="@+id/buttonVismenuRest1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_listview"
        android:choiceMode="multipleChoice"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
       style="@style/listViewsXL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_order"
        android:id="@+id/buttonVisOrdreRest1"
        android:layout_marginRight="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/custom_listview"
        android:layout_marginTop="10dp" />

</RelativeLayout>

